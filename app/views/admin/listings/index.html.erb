<main class="measure py2">
  <h2>Review Leads</h2>
  <form method="POST">
    <input name="_method" type="hidden" value="patch">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <table>
      <thead>
        <th>Source</th>
        <th>âœ“</th>
        <th>Date</th>
        <th>Title</th>
        <th>Location</th>
      </thead>
      <tbody>
        <% listings.each do |listing| %>
          <tr class="<%= 'fnt--mid-gray' if !listing[:lead_id] %>">
            <td><%= listing[:source] %></td>
            <td>
              <% if listing[:lead_id] %>
                <input type="checkbox" name="reviewed_leads[]" value="<%= listing[:lead_id] %>">
              <% end %>
            </td>
            <td><%= listing[:date] %></td>
            <td><a href="<%= listing[:url] %>"><%= listing[:title] %></a></td>
            <td><%= listing[:location] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <input class="btn--red" type="submit" value="Hide checked items">
  </form>

  <h2>Create Event Listing</h2>
  <form method="POST">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <label for="title">Title</label>
    <input type="text" id="title" name="title" required="required">

    <label for="address">Venue name <small>(optional)</small></label>
    <input type="text" id="venue" name="venue">

    <label for="address">Address</label>
    <input type="text" id="address" name="address" required="required">

    <label for="address">Link URL</label>
    <input type="url" id="link" name="link" required="required">

    <label for="blurb">Blurb</label>
    <textarea id="blurb" name="blurb" required="required"></textarea>

    <label for="start_date">Start date <small>(YYYY-MM-DD)</small></label> 
    <input type="date" id="start_date" name="start_date" required="required">

    <label for="end_date">End date <small>(YYYY-MM-DD, optional)</small></label> 
    <input type="date" id="end_date" name="end_date">

    <label for="hours">Hours <small>(optional)</small></label>
    <input type="number" id="hours" name="hours" step="1">

    <label for="restricted_to">Restricted to <small>(optional)</small></label>
    <input type="text" id="restricted_to" name="restricted_to">

    <input class="btn--blue" type="submit" value="Create">
  </form>
</main>
